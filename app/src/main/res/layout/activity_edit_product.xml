<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProductActivity">

    <TextView
        android:id="@+id/tvEditProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Product"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvEdtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name" />

    <EditText
        android:id="@+id/edtEditProductName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Edit Name"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/tvEditProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Price" />

    <EditText
        android:id="@+id/edtEditProductPrice"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="Edit Price"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/btnEditProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit" />
</LinearLayout>